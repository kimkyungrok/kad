<% layout('layout') %>

<div class="container my-5">

  <!-- 진행중인 이벤트 -->
  <% if (activeEvents && activeEvents.length > 0) { %>
    <h4 class="fw-bold mb-3">진행중인 이벤트</h4>
    <div class="table-responsive mb-5">
      <table class="table table-bordered table-hover align-middle text-center">
        <thead class="table-light">
          <tr>
            <th>이벤트명</th>
            <th>품목</th>
            <th>수량</th>
            <th>진행 형태</th>
            <th>시작일</th>
            <th>종료일</th>
          </tr>
        </thead>
        <tbody>
          <% activeEvents.forEach(event => { %>
            <tr>
              <td><%= event.title %></td>
              <td><%= event.item %></td>
              <td><%= event.quantity %></td>
              <td><%= event.type %></td>
              <td><%= event.type === '기간 한정' && event.startDate ? event.startDate.toISOString().slice(0, 10) : '' %></td>
              <td><%= event.type === '기간 한정' && event.endDate ? event.endDate.toISOString().slice(0, 10) : '' %></td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  <% } %>

  <!-- 완료된 이벤트 -->
  <% if (doneEvents && doneEvents.length > 0) { %>
    <h4 class="fw-bold mb-3">완료된 이벤트</h4>
    <div class="table-responsive mb-5">
      <table class="table table-bordered table-hover align-middle text-center">
        <thead class="table-secondary">
          <tr>
            <th>이벤트명</th>
            <th>품목</th>
            <th>수량</th>
            <th>진행 형태</th>
            <th>시작일</th>
            <th>종료일</th>
            <th>완료일</th>
          </tr>
        </thead>
        <tbody>
          <% doneEvents.forEach(event => { %>
            <tr>
              <td><%= event.title %></td>
              <td><%= event.item %></td>
              <td><%= event.quantity %></td>
              <td><%= event.type %></td>
              <td><%= event.type === '기간 한정' && event.startDate ? event.startDate.toISOString().slice(0, 10) : '' %></td>
              <td><%= event.type === '기간 한정' && event.endDate ? event.endDate.toISOString().slice(0, 10) : '' %></td>
              <td><%= event.completedAt ? event.completedAt.toISOString().slice(0, 10) : '' %></td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  <% } %>

  <!-- 등록 폼 -->
  <h2 class="text-center fw-bold mb-4">이벤트 등록</h2>
  <form action="/set-event" method="POST" enctype="multipart/form-data">
    <div class="table-responsive">
      <table class="table table-bordered align-middle">
        <tbody>
          <tr>
            <th style="width: 25%;">이벤트명</th>
            <td><input type="text" name="title" class="form-control" required></td>
          </tr>
          <tr>
            <th>이벤트 품목</th>
            <td><input type="text" name="item" class="form-control" required></td>
          </tr>
          <tr>
            <th>수량</th>
            <td><input type="number" name="quantity" class="form-control" min="1" required></td>
          </tr>
          <tr>
            <th>진행 형태</th>
            <td>
              <select name="type" id="eventType" class="form-select" required onchange="toggleDateFields()">
                <option value="">선택</option>
                <option value="선착순">선착순</option>
                <option value="랜덤">랜덤</option>
                <option value="기간 한정">기간 한정</option>
              </select>
            </td>
          </tr>
          <tr>
            <th>이벤트 설명</th>
            <td>
              <textarea name="description" class="form-control" rows="3" placeholder="이벤트 상세 내용을 입력하세요."></textarea>
            </td>
          </tr>
          <tr id="startDateRow" style="display: none;">
            <th>시작일</th>
            <td><input type="date" name="startDate" class="form-control"></td>
          </tr>
          <tr id="endDateRow" style="display: none;">
            <th>종료일</th>
            <td><input type="date" name="endDate" class="form-control"></td>
          </tr>
          <tr>
            <th>이미지 업로드</th>
            <td><input type="file" name="Eventimage" class="form-control" accept="image/*"></td>
          </tr>
        </tbody>
      </table>
    </div>

    <div class="text-center mt-4">
      <button type="submit" class="btn btn-primary px-5">이벤트 등록</button>
    </div>
  </form>
</div>

<script>
  function toggleDateFields() {
    const eventType = document.getElementById('eventType').value;
    const startRow = document.getElementById('startDateRow');
    const endRow = document.getElementById('endDateRow');

    if (eventType === '기간 한정') {
      startRow.style.display = '';
      endRow.style.display = '';
    } else {
      startRow.style.display = 'none';
      endRow.style.display = 'none';
      startRow.querySelector('input').value = '';
      endRow.querySelector('input').value = '';
    }
  }

  document.addEventListener('DOMContentLoaded', toggleDateFields);
</script>
